            padding: 20px;
        }

        .slide {
            display: none;
            width: 80%;
            text-align: center;
        }

        .active {
            display: block;
        }

        h1, h2, p {
            margin: 20px 0;
        }

        nav {
            margin-top: 20px;
        }

        button {
            background-color: #007BFF;
